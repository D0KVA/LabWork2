<Page x:Class="LabPW1.Games"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LabPW1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Games">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="0.2*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <DataGrid Name="dg_BD" Grid.Row="4" Grid.ColumnSpan="2" IsReadOnly="True"/>
        <Button Content="Добавить" Grid.Row="0" Grid.ColumnSpan="2" Click="Button_Click"/>
        <Button Content="Удалить" Grid.Row="1" Grid.ColumnSpan="2" Click="Button_Click_1"/>
        <Button Content="Изменить" Grid.Row="2" Grid.ColumnSpan="2" Click="Button_Click_2"/>
        <TextBox x:Name="NG" Grid.Row="3" Grid.Column="0"/>
        <TextBox x:Name="Zid" Grid.Row="3" Grid.Column="1"/>
    </Grid>
</Page>
